<!DOCTYPE html>
<html>
<head>
    <title>{{#block "title"}}Hero Squad{{/block}}</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    <link rel="stylesheet" href="/css/app.css">
</head>
<body>
<ul class="nav nav-tabs">
    <li role="presentation" ><a href="/">Home</a></li>
    <li role="presentation" ><a href="/heroes/new">Add a New Hero</a></li>

    <li role="presentation"
        class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
            Squad Menu <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
            {{#if squads}}
                {{#each squads}}
                    <li><a href="/squads/{{id}}">{{squadName}}</a></li>
                {{/each}}
                <li><a href="/squads/new">Add a Squad</a></li>
            {{else}}
                <li><a href="/squads/new">Add a Squad</a></li>
            {{/if}}
        </ul>
    </li>

</ul>
<div class="container">
    <!--begin main template-->
    <div class="page-header">
        <h1 class="text-center"><strong>WELCOME TO HEROSQUAD.</strong></h1>
        <img src="/images/nice.jpg" width="100%" height="100%">
    </div>

    <div class="col-md-12">
        {{#block "content"}} {{/block}}
    </div>
</div>
<!--end main template-->
{{#block "footer"}}
    <footer class="footer">
        <div class="container text-center">
            <hr>
            <p class="text-muted">
                <a href="/squads/delete" style="color:red;">Delete all squads & heroes</a><br>
                <a href="/heroes/delete" style="color:red;">Delete all heroes</a>
            </p>
        </div>
    </footer>
    </body>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    </html>
{{/block}}