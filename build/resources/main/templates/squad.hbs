{{#partial "content"}}
    <section class="sqd">
        <div class="row">
            <div class="col-md-2">
            </div>
            <div class="col-md-4 ">
                <a class="btns" href="/squad_form" style="font-size:25px;">Create Your Squad</a>
                <div class="card m-2"style="height:350px;">
                    <div id="newHero">
                        {{#each heroes}}
                            <div class="hero-item">
                                <div class="hero-infor">
                                    <p>Name: {{myname}}</p>
                                    <p>Super power: {{ mypower }}</p>
                                    <a class="btns" href="/squad/new/{{id}}">Add Squad</a>
                                </div>
                            </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        <div class="col-md-4">
            {{#if squads}}
                <h2> Squad available</h2>
                {{#each squads}}
                    <div class="card m-2"style="height:350px;">
                        <h1>{{ myname }} </h1>
                        <p>Id: {{sqid}}</p>
                        <p>Purpose: {{mycause}}</p>
                        <p>Max participants: {{ mysize }}</p>
                        <br><br>
                        <h3> New Member</h3>
                        {{#each squadMembers}}
                            <div>
                                <h5>Name: {{this.myname}}</h5>
                                <h5>Power: {{mypower}}</h5>
                            </div>
                        {{/each}}
                    </div>
                </div>
                {{/each}}
            {{else}}
                <h2>Please create a squad to continue</h2>
            {{/if}}
        </div>
        </div>
    </section>
{{/partial}}
{{#partial "footer"}}
    <script type="text/javascript" src="/js/jquery-3.4.0.min.js"></script>
    <script type="text/javascript" src="/js/script.js"></script>
{{/partial}}
{{> layout.hbs}}