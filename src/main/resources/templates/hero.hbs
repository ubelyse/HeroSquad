{{#partial "content"}}

    <div class="container">
        <p>Hero name:{{hero.name}}</p>
        <p>Special power:{{hero.power}}</p>
        <p>Weakness:{{hero.weakness}}</p>
        <p>Squad for hero:{{hero.name}} is:{{squad.squadName}}</p>
        <p>Age:{{hero.age}}</p>
        <h5>
            Hero status:
            {{#if hero.published }}
                <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  Completed
            {{else}}
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Available
            {{/if}}
        </h5>
        <p>
            <a href="/hero/{{hero.id}}/edit" style="color:green;">Edit this hero</a><br>
            <a href="/squad/{{hero.squadId}}/hero/{{hero.id}}/delete" style="color:red;">Delete this hero!</a>
        </p>
    </div>


{{/partial}}

{{> layout.hbs}}