{{#partial "content"}}
    {{#if editSquad}}
        <h1>Edit this squad!</h1>
        <form action="/squads/{{squad.id}}" method="post">
            <div class="form-group">
                <label for="squadName">Edit this squad's name:</label>
                <input id="squadName" name="squadName" type="text" value="{{squad.squadName}}">
            </div>
            <div class="form-group">
                <label for="cause">Edit this squad's dedication:</label>
                <input id="cause" name="cause" type="text" value="{{squad.cause}}">
            </div>
            <div class="form-group">
                <label for="max_size">Edit this squad's member counter:</label>
                <input id="max_size" name="max_size" type="text" value="">
            </div>

            <button type="submit" class="btn btn-primary">Add!</button>
        </form>
    {{else}}
        <div class="text-center">
            <h1>Add a new Squad!</h1>
            <form class="form" action="/squads" method="post">
                <div class="form-group">
                    <label for="squadName">Squad Name:</label>
                    <input id="squadName" name="squadName" type="text">
                </div>
                <div class="form-group">
                    <label for="cause">Squad Dedication:</label>
                    <input id="cause" name="cause" type="text">
                </div>
                <div class="form-group">
                    <label for="max_size">Maximum Heroes:</label>
                    <input id="max_size" name="max_size" type="number">
                </div>
                <button type="submit" class="btn btn-primary">Add Squad</button>
            </form><br>
            <button type="submit" class="btn btn-primary">check Squad</button>
        </div>

    {{/if}}
{{/partial}}

{{> layout.hbs}}
