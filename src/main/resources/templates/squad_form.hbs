{{#partial "content"}}
    {{#if editSquad}}
        <h1>Edit this squad!</h1>
        <form action="/squad/{{squad.id}}" method="post">
            <div class="form-group">
                <label for="newSquadName">Edit this squad's name:</label>
                <input id="newSquadName" name="newSquadName" type="text" value="{{squad.newSquadName}}">
            </div>
            <div class="form-group">
                <label for="cause">Edit this squad's dedication:</label>
                <input id="cause" name="cause" type="text" value="{{squad.cause}}">
            </div>
            <div class="form-group">
                <label for="max_size">Edit this squad's maximum size:</label>
                <input id="max_size" name="max_size" type="text" value="">
            </div>

            <button type="submit" class="btn btn-primary">Go!</button>
        </form>
    {{else}}
        <h1>Add a new Squad!</h1>
        <form action="/squad" method="post">
            <div class="form-group">
                <label for="squadName">Squad Name:</label>
                <input id="squadName" name="squadName" type="text">
            </div>
            <div class="form-group">
                <label for="cause">Squad Cause:</label>
                <input id="cause" name="cause" type="text">
            </div>
            <div class="form-group">
                <!--            Add counter here            -->
                <label for="squadMembersCounter">Max no of members:</label>
                <input id="squadMembersCounter" name="squadMembersCounter" type="text">
            </div>
            <button type="submit" class="btn btn-primary">Go!</button>
        </form>
    {{/if}}
{{/partial}}

{{> layout.hbs}}